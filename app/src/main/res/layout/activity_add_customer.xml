<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.katomaran.robotics.rengas.AddCustomer">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Register"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:background="@drawable/trans_white_rectangle">

    <EditText
        android:id="@+id/shopname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_store_black_24dp"
        android:drawableTint="#fff"
        android:background="@drawable/login_background"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Shop Full Name"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="16sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#fff" />

        <EditText
            android:id="@+id/regnumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_list_black_24dp"
            android:drawableTint="#fff"
            android:background="@drawable/login_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Registration Number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fff" />

        <EditText
            android:id="@+id/mobnumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_background"
            android:drawableLeft="@drawable/ic_smartphone_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="#fff"
            android:gravity="center_vertical"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fff" />
        <EditText
            android:id="@+id/telnumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_phone_24dp"
            android:drawableTint="#fff"
            android:background="@drawable/login_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Telephone Number"
            android:inputType="phone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fff" />
        <EditText
            android:id="@+id/e_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_mail_24dp"
            android:drawableTint="#fff"
            android:background="@drawable/login_background"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="E Mail"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fff" />
    </LinearLayout>

    </ScrollView>
        <Button
            android:id="@+id/signUpBtn"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#9F3BF6"
            android:padding="3dp"
            android:text="Add"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>

